<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Sentiment</th>
      <th>Weeks</th>
      <th>medicated</th>
      <th>indoors</th>
      <th>created_at</th>
      <th>verbal_arguments</th>
      <th>arrested</th>
      <th>Sentiment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.user_id %></td>
        <td><%= report.sentiment %></td>
        <td><%= report.weeks_homeless %></td>
        <td><%= report.medicated %></td>
        <td><%= report.indoors %></td>
        <td><%= report.created_at %></td>
        <td><%= report.verbal_arguments %></td>
        <td><%= report.arrested %></td>
        <td><%= report.sentiment %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

